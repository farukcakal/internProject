@model SettingsModel
<div class="container">
    <div class="footer-newsletter">
        <div class="row y-middle">
            <div class="col-md-6 sm-mb-26">
                <h3 class="title white-color mb-0">Mail Aboneliği</h3>
            </div>
            <div class="col-md-6 text-right">
                <form class="newsletter-form" action="/mailsubscribe" method="post">
                    <input type="email" name="email" placeholder="E-Mail Adresiniz" required="">
                    <button type="submit"><i class="fa fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>
    <div class="footer-content pt-62 pb-79 md-pb-64 sm-pt-48">
        <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12 footer-widget md-mb-39">
                <div class="about-widget pr-15">
                    <div class="logo-part">
                        <a href="/"><img src="/uploads/@Model.logo" alt="Footer Logo"></a>
                    </div>
                    <p class="desc">@Model.description</p>
                    <div class="btn-part">
                        <a class="readon" href="https://argeya.com/tr/hakkimizda">Hakkımızda</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 md-mb-32 footer-widget">
                <h4 class="widget-title">İletişim</h4>
                <ul class="address-widget pr-40">
                    <li>
                        <i class="flaticon-location"></i>
                        <div class="desc">@Model.adress</div>
                    </li>
                    <li>
                        <i class="flaticon-call"></i>
                        <div class="desc">
                            <a href="tel:@Model.phone">@Model.phone</a>
                        </div>
                    </li>
                    <li>
                        <i class="flaticon-email"></i>
                        <div class="desc">
                            <a href="mailto:@Model.email">@Model.email</a>
                        </div>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="footer-bottom">
        <div class="row y-middle">
            <div class="col-lg-6 col-md-8 sm-mb-21">
                <div class="copyright">
                    <p>© Copyright 2022 Argeya. All Rights Reserved.</p>
                </div>
            </div>
            <div class="col-lg-6 col-md-4 text-right sm-text-center">
                <ul class="footer-social">
                    <li><a href="@Model.facebook"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="@Model.instagram"><i class="fa fa-instagram"></i></a></li>
                    <li><a href="@Model.twitter"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="@Model.linkedin"><i class="fa fa-linkedin"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

